<% provide(:title, 'Signin') %>
<h1>Aanmelden</h1>
<div class="row">
	<div class="span6 offset3">
	<%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email, "E-mail" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Wachtwoord" %>
      <%= f.password_field :password %>

      <%= f.submit "Aanmelden", class: "btn btn-large btn-primary" %>
    <% end %>
    <p>Nieuwe gebruiker? <%= link_to "Account aanmaken", signup_path %></p>
    <p>Wachtwoord vergeten? <%= link_to "Wachtwoord aanvragen", new_password_reset_path %></p>
	</div>
</div>
