<% provide(:title, 'Games') %>
<h1>Edit Games</h1>
		<% @groups = Game.distinct.pluck(:group) %>
		<% @groups.each do |group| %>
		<h2><%= group %></h2>
			<table class="table">
				<thead>
					<tr>
						<th>Date</th>
						<th>Homeside</th>
						<th>Awayside</th>
						<th>Homescore</th>
						<th>Awayscore</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @games.where(group: group).order(playdate: :asc).each do |game|%>
							<tr>
						    <%= form_for(game) do |f| %>
							      
						    	<td><%= f.object.playdate %></td>
						    	<td><%= f.object.homeside %></td>
						    	<td><%= f.object.awayside %></td>
						    	<td>
							      	<%= f.text_field :homescore %>
							    </td>
						    	<td>
						    		<%= f.text_field :awayscore %>
						    	</td>
						    	<td>
							      <%= f.submit "Update score", class: "btn btn-large btn-primary" %>
							  	</td>
							<% end %>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% end %>
