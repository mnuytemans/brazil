<% provide(:title, 'Sign up') %>
<h1>Account aanmaken</h1>
<% if open? %>
	<div class="row">
		<div class="span6 offset3">		
			<%= form_for(@user) do |f|%>
				<%= render 'shared/error_messages', object: f.object %>
				<%= f.label :name, "Naam" %>
		      	<%= f.text_field :name %>

		      	<%= f.label :email, "E-mail" %>
		      	<%= f.text_field :email %>

			 	<%= f.label :password, "Wachtwoord" %>
			    <%= f.password_field :password %>

		     	<%= f.label :password_confirmation, "Wachtwoord bevestigen" %>
		     	<%= f.password_field :password_confirmation %>

		     	<%= f.submit "Bevestigen", class: "btn btn-large btn-primary" %>
	    	<% end %>
	  </div>
	</div>
<% else %>
	<div class="row">
		<h2>Deadline verstreken. Deelnemen is niet meer mogelijk.</h2>
	</div>
<% end %>

