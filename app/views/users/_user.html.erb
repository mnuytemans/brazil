<tr>
	<td>
		<%= index+1%>
	</td>
	<td>
		<% if current_user?(user) || !open? %>
		  <%= link_to user.name, user %>
		<% else %>
		  <%= user.name %>
		<% end %>
	</td>
	<td>
		<%= user.get_score unless user.get_score.nil? %>
	</td>
	<% if current_user.admin? %>
	<td>
		<% if user.bet_status["Completed"] %>
			Volledig
		<% else %>
			Onvolledig
		<% end %>
	</td>
	<td>
		<% if !current_user?(user) %>
			<%= link_to 'delete', user, method: :delete, data: {confirm: 'Are you sure?'} %>	
		<% end %>
	</td>
	<% end %>
</tr>